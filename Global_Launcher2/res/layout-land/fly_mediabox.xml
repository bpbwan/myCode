<?xml version="1.0" encoding="utf-8"?>

<com.android.launcher2.FlyFunctionBox
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flyaudio="http://schemas.android.com/apk/res/com.android.launcher"
    android:id="@+id/box"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:layout_gravity="bottom|center_horizontal"
    >
    <LinearLayout
        android:id="@+id/myView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0px"
        android:layout_marginLeft="0px"
       
        android:orientation="vertical"
        android:background="@drawable/bg_box" >
		
         <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:paddingLeft="0px"
		        android:paddingTop="0px" 
		        >
		 <com.android.flyaudio.powerwidget.PowerWidget
            android:id="@+id/exp_power_stat"
            android:layout_width="wrap_content"
            android:layout_height="117px"
           />
        </LinearLayout>
        
         <LinearLayout
		        android:id="@+id/mediabox"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:gravity="center_horizontal"
		        android:paddingLeft="0px"
		        android:paddingTop="0px" >

		    </LinearLayout>		
		    
         <LinearLayout
		       android:id="@+id/mediabox2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		         android:gravity="center_horizontal"
		        android:orientation="horizontal"
		        android:paddingLeft="0px"
		        android:paddingTop="0px" 
		        android:visibility="gone"
		        >

		    </LinearLayout>		

		</LinearLayout>
</com.android.launcher2.FlyFunctionBox>

