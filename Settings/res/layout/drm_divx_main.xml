<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="70dip"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="20dip">
	    <TextView
            android:layout_width="600dip"
            android:layout_height="100dip"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="30dip"
	        android:gravity="center"
  			android:singleLine="true"
  			android:textSize="40dp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:background="@drawable/textview_border"
 			android:textColor="?android:attr/textColorSecondary"
            android:text="@string/drm_divx_vod_tip"
	        android:id="@+id/tDrmDivxRVodLabel"
            />
        <Button
            android:layout_width="300dip"
            android:layout_height="70dip"
 	        android:layout_marginTop="30dip"
  			android:textSize="25dp"
 			android:textColor="?android:attr/textColorSecondary"
            android:id="@+id/bRegister"
            android:text="@string/drm_divx_register"
            />
        <Button
            android:layout_width="300dip"
            android:layout_height="70dip"
	        android:layout_marginTop="25dip"
  			android:textSize="25dp"
  			android:textColor="?android:attr/textColorSecondary"
            android:id="@+id/bDeregister"
            android:text="@string/drm_divx_deregister"
            />
        <Button
            android:layout_width="300dip"
            android:layout_height="70dip"
	        android:layout_marginTop="25dip"
  			android:textSize="25dp"
 			android:textColor="?android:attr/textColorSecondary"
            android:id="@+id/bExit"
            android:text="@string/drm_divx_exit"
            />
</LinearLayout>
