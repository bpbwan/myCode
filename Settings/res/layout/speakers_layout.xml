<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="480dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:gravity="right"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/spk_title"
            android:textSize="18sp"
        />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/down_line"/>
        </LinearLayout>
        <Button
            android:id="@+id/speakersreset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/eq_button"
            android:text="@string/reset"
            android:textColor="@color/button_color"
            android:textSize="18sp" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >        
        <RelativeLayout
	        android:layout_width="50dp"
	        android:padding="5dp"
	        android:layout_height="250dp"
	        android:orientation="vertical" >
	        <TextView
                android:id="@+id/fl"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:layout_gravity="top"
                android:background="@drawable/text_bg"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/ls"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:layout_marginTop="170dp"
                android:background="@drawable/text_bg"
                android:textSize="16sp" />
	    </RelativeLayout>
	    
	    <LinearLayout
            android:id="@+id/sp_loc"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:background="@drawable/speakers"
            android:orientation="horizontal" >
        </LinearLayout>
        
	    <RelativeLayout
	        android:layout_width="50dp"
	        android:padding="5dp"
	        android:layout_height="250dp"
	        android:orientation="vertical" >
	        <TextView
                android:id="@+id/fr"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:background="@drawable/text_bg"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/rs"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:layout_marginTop="170dp"
                android:background="@drawable/text_bg"
                android:textSize="16sp" />
	    </RelativeLayout>
	    
	    <LinearLayout
	        android:layout_width="180dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:layout_marginRight="5dp"
	        android:orientation="vertical" >
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="80dp"
	            android:layout_gravity="right"
	            android:orientation="horizontal" >
	            <Switch
	                android:id="@+id/center_switch"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textOn=""
	                android:textOff=""
	                android:track="@drawable/switch_bg"
	                android:thumb="@drawable/thumb"
	                android:text="@string/center" />                
	        </LinearLayout>

	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="80dp"
	            android:layout_gravity="right"
	            android:orientation="horizontal" >
	            <Switch
	                android:id="@+id/subwoofer_switch"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textOn=""
	                android:textOff=""
	                android:track="@drawable/switch_bg"
	                android:thumb="@drawable/thumb"
	                android:text="@string/subwoofer" />     
	        </LinearLayout>
	        
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="80dp"
	            android:layout_gravity="right"
	            android:orientation="horizontal" >

	            <Switch
	                android:id="@+id/ls_rs_switch"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textOn=""
	                android:textOff=""
	                android:track="@drawable/switch_bg"
	                android:thumb="@drawable/thumb"
	                android:text="@string/ls_rs" />
        	</LinearLayout>
	    </LinearLayout>
    </LinearLayout>
</LinearLayout>

