            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:orientation="vertical" >

                <com.ATC.audio.VerticalSeekBar
                    android:id="@+id/_1k"
                    android:layout_width="21dp"
                    android:layout_height="200dp"
