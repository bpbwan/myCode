<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dip"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="20dip"
    android:paddingTop="70dip" >

    <TextView
        android:id="@+id/tDrmDivxRVodLable"
        android:layout_width="400dip"
        android:layout_height="100dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dip"
        android:background="@drawable/textview_border"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/drm_divx_vod_tip"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tDrmDivxReregTip"
        android:layout_width="600dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dip"
        android:background="@drawable/textview_border"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="@string/drm_divx_reregister_tip"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:layout_marginTop="30dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="25dip" >

        <Button
            android:id="@+id/bOK"
            android:layout_width="300dip"
            android:layout_height="70dip"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:text="@string/drm_divx_ok"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bCancel"
            android:layout_width="300dip"
            android:layout_height="70dip"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:text="@string/drm_divx_cancel"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="25dp" />
    </LinearLayout>

</LinearLayout>