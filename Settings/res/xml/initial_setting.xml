<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/STR_STA_PREFERENCETITLE" android:key="sound_settings"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <ListPreference android:key="tvtype"
        android:title="@string/STR_STA_TVSYSTEMTITLE" android:entries="@array/tvsystem_entries"
        android:entryValues="@array/tvsystem_values" />
        
        <CheckBoxPreference android:key="pbctype"
        android:title="@string/STR_STA_PBCTITLE" />
        
        <ListPreference android:key="audiolantype"
        android:title="@string/STR_STA_AUDIOTITLE" android:entries="@array/language_entries"
        android:entryValues="@array/language_values" />
        
        <ListPreference android:key="sublantype"
        android:title="@string/STR_STA_SUBTITLETITLE" android:entries="@array/language_subtitle_entries"
        android:entryValues="@array/language_subtitle_values" />
        
        <ListPreference android:key="menulantype"
        android:title="@string/STR_STA_DISKMENUTITLE" android:entries="@array/language_entries"
        android:entryValues="@array/language_values" />
        
        <ListPreference android:key="parentaltype"
        android:title="@string/STR_STA_AGECONTROL" android:entries="@array/agecontrol_entries"
        android:entryValues="@array/agecontrol_values" />
        
        <PreferenceScreen
        android:key="password"
        android:title="@string/STR_BTN_PASSWORDBTN"></PreferenceScreen>
</PreferenceScreen>